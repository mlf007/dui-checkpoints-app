{
  "expo": {
    "name": "DUI Checkpoints Locator",
    "slug": "dui-checkpoints-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#374151"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meehanlaw.duicheckpoints",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs location access to show checkpoints near you.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access to show checkpoints near you."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#374151"
      },
      "package": "com.meehanlaw.duicheckpoints",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow DUI Checkpoints to use your location to show checkpoints near you."
        }
      ]
    ]
  }
}
